<%= form_for @short_link, url: { action: 'update', id: @short_link } do |f| %>
<table>
  <tbody>
    <tr>
      <td>Shortened URL:</td>
      <td><%= shortened_url(short_url: @short_link.short_url) %></td>
    </tr>
    <tr>
      <td>Original URL:</td>
      <td><%= @short_link.original_url %></td>
    </tr>
    <tr>
      <td>View count:</td>
      <td><%= @short_link.view_count %></td>
    </tr>
    <tr>
      <td>Expired?:</td>
      <td>
        <%= check_box_tag "short_link[expired]", true, @short_link.expired? %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit 'Save' %></td>
  </tbody>
</table>
<% end %>
